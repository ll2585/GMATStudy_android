<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Questions"/>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="4">

    <TextView
        android:layout_column="0"
        android:layout_row="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quantitative"/>
    <CheckBox
        android:layout_column="0"
        android:layout_row="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Problem Solving"/>
    <CheckBox
        android:layout_column="0"
        android:layout_row="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data Sufficiency"/>
    <TextView
        android:layout_column="1"
        android:layout_row="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verbal"/>
    <CheckBox
        android:layout_column="1"
        android:layout_row="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sentence Correction"/>
    <CheckBox
        android:layout_column="1"
        android:layout_row="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Critical Reading"/>
    <CheckBox
        android:layout_column="1"
        android:layout_row="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reading Comprehension"/>
    </GridLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Options"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="# Questions (blank for infinite):"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min Difficulty (blank for None):"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max Difficulty (blank for None):"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min % Right (blank for None):"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max % Right (blank for None):"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min Sessions (blank for None):"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max Sessions (blank for None):"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minimum times wrong:"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minimum times right:"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"/>
    </LinearLayout>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="4">
        <CheckBox
            android:layout_column="0"
            android:layout_row="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Only Unanswered Questions"/>
        <CheckBox
            android:layout_column="0"
            android:layout_row="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Answer Immediately"/>
        <CheckBox
            android:layout_column="0"
            android:layout_row="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Store Answers"/>
        <CheckBox
            android:layout_column="1"
            android:layout_row="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Only Answered Questions"/>
        <CheckBox
            android:layout_column="1"
            android:layout_row="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Only Wrongly Answered Questions"/>
        <CheckBox
            android:layout_column="1"
            android:layout_row="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Only Right Questions"/>
        <CheckBox
            android:layout_column="1"
            android:layout_row="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Stats on Answered Questions"/>
        </GridLayout>
    <Button android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Start"
        android:onClick="start_study">

    </Button>
</LinearLayout>
</ScrollView>